<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="60 seconds" debug="true">
    <contextName>consumer</contextName>
	<property name="LOG_PATH" value="/var/log/dubbo"/>
    <property name="FILE_NAME" value="contentserver-impl"/>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}:%L-%X{ID}- %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="${FILE_NAME}-info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${FILE_NAME}-info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${FILE_NAME}-info.log.%d{yyyy-MM}.%i</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>1024MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}:%L %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
    	<appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.xlongwei.archetypes.dubbo" level="info">
    	<appender-ref ref="${FILE_NAME}-info"/>
    </logger>
</configuration>